<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="银行卡识别结果"
            android:textColor="@android:color/white"
            android:background="@color/blue"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:layout_alignTop="@id/txt_title"
            android:layout_alignBottom="@id/txt_title"
            android:layout_alignParentLeft="true"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:gravity="center"
            android:src="@drawable/ic_back"/>

        <ImageView
            android:id="@+id/img_card"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:contentDescription="@string/app_name"
            android:layout_below="@id/img_back"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitCenter"/>

        <View
            android:id="@+id/view_divider_1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/img_card"
            android:background="#aaaaaa" />

        <LinearLayout
            android:id="@+id/layout_card_number"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/view_divider_1"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行卡号："
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textSize="15dp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

        <View
            android:id="@+id/view_divider_2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/layout_card_number"
            android:background="#aaaaaa" />

        <LinearLayout
            android:id="@+id/layout_bank_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/view_divider_2"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发卡行名称："
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textSize="15dp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

        <View
            android:id="@+id/view_divider_3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/layout_bank_name"
            android:background="#aaaaaa" />

        <LinearLayout
            android:id="@+id/layout_bank_id"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/view_divider_3"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发卡行标识代码："
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_bank_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

        <View
            android:id="@+id/view_divider_4"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/layout_bank_id"
            android:background="#aaaaaa" />

        <LinearLayout
            android:id="@+id/layout_card_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/view_divider_4"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡片名称："
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textSize="15dp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

        <View
            android:id="@+id/view_divider_5"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/layout_card_name"
            android:background="#aaaaaa" />

        <LinearLayout
            android:id="@+id/layout_card_type"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/view_divider_5"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:gravity="center_vertical"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡片类型："
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textSize="15dp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@id/layout_card_type"
            android:background="#aaaaaa" />

    </RelativeLayout>
</ScrollView>