<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_divider_1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_centerInParent="true"
        android:background="#aaaaaa" />

    <TextView
        android:id="@+id/txt_score_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_divider_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="分数"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txt_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txt_score_title"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/txt_score_title"
        android:textColor="@android:color/darker_gray"
        android:textSize="15dp" />

    <View
        android:id="@+id/view_divider_9"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/txt_score"
        android:layout_marginTop="10dp"
        android:background="#aaaaaa" />
</RelativeLayout>
